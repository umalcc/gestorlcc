<div id="central" >
    <p id=titulo>GESTOR DE RECURSOS<br/>
       <%= image_tag ("pointer.gif") %>Gesti&oacute;n de archivos: Solicitudes de laboratorios para ex&aacute;menes
    </p>
    <div id="recuadro">
       <div id="lista-gestion">
          <p><%= image_tag ("bg_separ.gif") %></p>
          <div id="busqueda">
           <table>
            <tr>
              <td><%= image_tag("search.png") %></td>
              <td>Buscar  : </td>
              <td><%= text_field_tag "query" %></td>
             
            </tr>
           </table>
          </div><!-- de busqueda -->
          <div id="tabla"><%= render :partial => "items_lista" %></div> 
       </div><!-- de lista-gestion -->
    </div><!-- de recuadro -->
</div><!-- de central -->



<script type="text/javascript">


$(function()
{
  $("#query").keyup(function()
  {
    var url="/solicitudlabexas/listar";
    var query=$("#query").val();
    $.ajax({
      type:"POST",
      url:url,
      data:{query:query}
    });
  });
});
</script>