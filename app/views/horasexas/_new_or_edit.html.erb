<div id="central" >
   <p>GESTOR DE RECURSOS<br>
      <%= image_tag ("pointer.gif") %>Par&aacute;metros del sistema: <%=titulo%>
   </p>

   <div id="recuadro">
     <p><%= image_tag ("bg_separ.gif") %></p>

     <div id="recuadro-azul" style="height:200px">
      <%= form_for(@horasexa) do |f| %>

       <dl>
          <dt>N&uacute;mero *</dt>
          <dd><%= f.text_field :num, :size =>3 %></dd>
          <dt>Comienzo *</dt>
          <dd><%= f.text_field :comienzo, :size =>6 %></dd>
	  <dt>Fin *</dt>
          <dd><%= f.text_field :fin, :size =>6 %></dd>
          <dt>En uso?</dt>
          <dd><%= f.check_box :en_uso %></dd>
          <%if confirm_message.nil? %>
             <p><%= f.submit submit_name, :class=>"boton" %></p>
          <%else%>
             <%= hidden_field_tag "msg", value=confirm_message %>
             <p><%= f.submit submit_name, :class=>"boton" %> </p>
          <%end%>
       </dl>

     </div><!-- de recuadro-azul -->

     <div id="errores">
        <%= f.error_messages :header_message => 'Se produjeron errores en la captura de datos', 
            :message => error_message %>
     </div>
      <% end %><!-- de form_for -->

   </div><!-- de recuadro -->
</div><!-- de central -->

<script type="text/javascript">

$(function()
{
     $('form.edit_horasexa').submit(function() {
          var confirmMsg = $("#msg").val();
          return confirm(confirmMsg);
     })
});

</script>