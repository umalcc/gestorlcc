   <% end %><!-- de @asignacionexas -->
<% else  %>
<%= @asignacionexas.length%>
<% end%>
  </table>
 </div>
</div>


<script type="text/javascript">

$(function()
{
  
   $('a[name=borraDirAsig]').click(function () { 

         var aux=$("div[id^='asignatura']").attr("id"); 
         var asignaId = aux.replace("asignatura",""); 
         var row=$("#"+aux).parent().parent().parent();
         if(confirm('Seguro que desea eliminar la asignacion?'))
         {
            $.ajax({
                     type: "POST",
                     url: "borradirasignada",
                     data: { asigna:asignaId },
                     success:function(){
                        row.remove();
                   }, error:function()
                   {
                    alert("Hubo un problema borrando la solicitud");
                   }});
         }  
         
    }) 

});

</script>