
<!-- OBTENGO LOS TRAMOS QUE HAY QUE VISUALIZAR , 0 EN PRINCIPIO-->

<% @tramos=session[:tramos_horarios].solicitudes %> 
<table id="tramos">
  <% if @tramos.empty? %>
    <tr><td><%= h "No hay tramos horarios" %></td></tr>
  <% else %>
    <%=render(:partial => "/solicitudrecursos/muestra_tramo", :collection=> @tramos) %> <!-- MUESTRO TRAMOS SI LOS HAY -->
  <% end %>
</table>

