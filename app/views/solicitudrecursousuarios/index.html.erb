<div id="central" >
    <p>GESTOR DE RECURSOS<br/>
       <%= image_tag ("pointer.gif") %>Reservas de recursos
    </p>
    <div id="recuadro">
        <div id="lista-gestion">
           <p><%= image_tag ("bg_separ.gif") %></p>
           <div id="busqueda">
             <table>
              <tr>
               <td><%= image_tag("search.png") %>
               <td>Buscar  : 
               <td><%= text_field_tag "query" %></td>
              </tr>
             </table>
           </div>
           <div id="tabla"><%= render :partial => "items_lista" %></div> 
        </div><!-- de lista-gestion -->
    </div><!-- de recuadro -->
</div><!-- de central -->


<script type="text/javascript">
$(function()
  {
    $("#query").keyup(function()
      {
        var query=$("#query").val();
        var url="/solicitudrecursousuarios/listar";
        $.ajax({
          type:"POST",
          url:url,
          data:{query:query}
        });
      });
  });

</script>