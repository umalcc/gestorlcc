<script type="text/javascript">
  $(function() {
    $( "#tabs" ).tabs();
    $('#tabs').tabs({
    activate: function(event, ui) {
        $('#sabado').fullCalendar('render');
         $('#viernes').fullCalendar('render');
    }
});

    $("#sabado").fullCalendar({
      header: {
            left: '',
            center: 'title',
            right: ''
          },
      allDaySlot:false,
