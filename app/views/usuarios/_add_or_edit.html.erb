 <div id="recuadro">
       <p><%= image_tag ("bg_separ.gif") %></p>
       <div id="recuadro-azul" style="height:350px">
         <%= form_for(@usuario) do |f| %>
         <dl>
          <dt>Identificador *</dt>
          <dd><%= f.text_field :identificador,:size=>12 %></dd>
          <dt>Contrase&ntilde;a</dt>
          <dd><%= f.password_field :password,:size=>12 %></dd>
          <dt>Confirmaci&oacute;n</dt>
          <dd><%= f.password_field :password_confirmation,:size=>12 %></dd>
          <dt>Nombre *</dt>
          <dd><%= f.text_field :nombre,:size=>20 %></dd>
          <dt>Apellidos *</dt>
          <dd><%= f.text_field :apellidos,:size=>24 %></dd>
          <dt>Email *</dt>
          <dd><%= f.text_field :email,:size=>24 %></dd>
          <dt>Despacho</dt>
          <dd><%= f.text_field :despacho,:size=>8 %></dd>
          <dt>Tel&eacute;fono</dt>
          <dd><%= f.text_field :telefono,:size=>8 %></dd>
              <%= hidden_field_tag "admin" %>        
          </dd>
          <p><%= f.submit 'Guardar', :class=>"boton" %></p>
        </dl>
       </div><!-- de recuadro-azul -->
       <div id="errores">
          <%= f.error_messages :header_message => 'Se produjeron errores en la captura de datos', 
              :message => 'Imposible guardar el usuario debido a:'%>
       </div>
       <% end %><!-- de form_for -->
    </div><!-- de recuadro -->