<div id="central" >
   <p id="titulo">GESTOR DE RECURSOS<br/>
      <%= image_tag ("pointer.gif") %>Gesti&oacute;n de archivos: Otros recursos
   </p>
   <div id="recuadro">
      <div id="lista-gestion">
        <p><%= image_tag ("bg_separ.gif") %></p>

        <div id="busqueda">
         <table>
          <tr>
           <td><%= image_tag("search.png") %></td>
           <td>Buscar  : 
           <td><%= text_field_tag "query" %>         
            
          </tr>
         </table>
        </div><!-- de busqueda -->

        <div id="tabla"><%= render :partial => "items_lista" %></div> 

      </div><!-- de lista-gestion -->
    </div><!-- de titulo -->
</div><!-- de central -->



<script type="text/javascript">
$(function()
  {
    $("#query").keyup(function()
      {

        var url="/recursos/listar";
        $.ajax({
          type:"POST",
          url:url,
          data:{query:$("#query").val()}
        });
      });
  });
</script>